<%= form_for(@wall_post, url: root_path, remote: true, html: {class: "form-horizontal"}) do |f| %>
  <div class = "form-group">
    <%= f.label :post, "Post", class: "control-label col-md-2" %>
    <div class = "form-controls col-md-4">
      <%= f.text_field :post, class: "form-control" %>
    </div>
  </div>
  <div class = "form-group">
    <div class = "col-md-offset-2 col-md-4">
      <%= f.submit "Submit Post", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
